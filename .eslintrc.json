{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:react/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "no-loops", "prettier"],
  "rules": {
    "no-loops/no-loops": 2,
    "quotes": ["error", "double"],
    "prettier/prettier": "error"
  }
}
